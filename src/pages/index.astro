---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Portfolio from '../components/Portfolio.astro';
import Testimonials from '../components/Testimonials.astro';
import Process from '../components/Process.astro';
import Contact from '../components/Contact.astro';

// SEO data
const seoTitle = "Tvoríme Weby – Profesionálna tvorba webov a e-shopov";
const seoDescription = "Špecializujeme sa na vývoj webov, e-shopov a aplikácií na mieru. Vytvárame digitálne riešenia s dôrazom na výkon, dizajn a SEO.";
const seoKeywords = "tvorba webstránok, tvorba e-shopov, webové aplikácie, SEO optimalizácia, responzívny dizajn, moderný web, landing page, firemný web";

// Structured data for services
const servicesData = {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Tvoríme Weby",
    "description": "Špecializujeme sa na tvorbu moderných webových stránok a e-shopov na mieru.",
    "url": "https://tvorime-weby.sk/",
    "offers": [
        {
            "@type": "Offer",
            "name": "Landing Page",
            "description": "Jednoduchá a efektívna landing page s moderným dizajnom",
            "price": "249",
            "priceCurrency": "EUR"
        },
        {
            "@type": "Offer",
            "name": "Firemný web",
            "description": "Komplexné firemné webové stránky s SEO optimalizáciou",
            "price": "599",
            "priceCurrency": "EUR"
        },
        {
            "@type": "Offer",
            "name": "E-shop",
            "description": "Profesionálny e-shop s administračným systémom",
            "price": "999",
            "priceCurrency": "EUR"
        }
    ]
}
---
<Layout
    title={seoTitle}
    description={seoDescription}
    keywords={seoKeywords}
>
    <Hero />
    <Services />
    <Portfolio />
    <Testimonials />
    <Process />
    <Contact />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(servicesData)} />
</Layout>

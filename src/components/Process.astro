---
import SectionHeader from './shared/SectionHeader.astro';

interface ProcessStep {
    number: number;
    title: string;
    description: string;
}

const processSteps: ProcessStep[] = [
    {
        number: 1,
        title: "Analýza",
        description: "Dôkladne analyzujeme vaše požiadavky a ciele projektu."
    },
    {
        number: 2,
        title: "Návrh",
        description: "Vytvoríme dizajn a štruktúru webu podľa vašich predstáv."
    },
    {
        number: 3,
        title: "Realizácia",
        description: "Programujeme a implementujeme všetky funkcionality."
    },
    {
        number: 4,
        title: "Spustenie",
        description: "Testujeme, optimalizujeme a spúšťame váš projekt."
    }
];
---
<section id="process" class="py-24 bg-slate-900" aria-label="Proces realizácie">
    <div class="container mx-auto px-4">
        <SectionHeader
            title="Ako postupujeme"
            description="Každý projekt realizujeme systematicky v niekoľkých krokoch"
            dark={true}
        />

        <div class="grid md:grid-cols-4 gap-8">
            {processSteps.map((step) => (
                <div class="relative reveal" style={`transition-delay: ${(step.number - 1) * 150}ms`}>
                    <div class="w-16 h-16 bg-cyan-500/20 rounded-2xl flex items-center justify-center mb-6">
                        <span class="text-2xl font-bold text-cyan-500">{step.number}</span>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-4">{step.title}</h3>
                    <p class="text-slate-400">{step.description}</p>
                </div>
            ))}
        </div>
    </div>
</section>

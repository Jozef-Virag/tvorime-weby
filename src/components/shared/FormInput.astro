---
interface Props {
    label: string;
    type?: 'text' | 'email' | 'tel' | 'select' | 'textarea';
    name: string;
    required?: boolean;
    options?: { value: string; label: string; }[];
    rows?: number;
}

const { label, type = 'text', name, required = false, options = [], rows = 6 } = Astro.props;
---
<div class="w-full">
    <label class="block text-sm font-medium text-slate-700 mb-2" for={name}>
        {label}
    </label>

    {type === 'textarea' ? (
        <textarea
            id={name}
            name={name}
            rows={rows}
            class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition"
            required={required}
        ></textarea>
    ) : type === 'select' ? (
        <select
            id={name}
            name={name}
            class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition"
            required={required}
        >
            <option value="">Vyberte možnosť</option>
            {options.map(option => (
                <option value={option.value}>{option.label}</option>
            ))}
        </select>
    ) : (
        <input
            type={type}
            id={name}
            name={name}
            class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition"
            required={required}
        />
    )}
</div>
